#!/bin/sh

set -e

root_dir=$(git rev-parse --show-toplevel)
venv_python="$root_dir/app-cli/.venv/Scripts/python.exe"

if [ ! -f "$venv_python" ]; then
  venv_python="$root_dir/app-cli/.venv/bin/python"
fi

if [ ! -f "$venv_python" ]; then
  echo "Python venv not found. Create it in $root_dir/app-cli/.venv first."
  exit 1
fi

echo "ðŸš€ Running pre-commit hook ðŸš€"

files=$(git diff --cached --name-only --diff-filter=d "*.py")

if [ -n "$files" ]; then
  echo -e "\nâœ¨ Sorting imports..."
  "$venv_python" -m ruff check --select I --fix $files
  git add $files

  echo -e "\nâœ¨ Linting and formatting..."
  "$venv_python" -m ruff check $files
  "$venv_python" -m ruff format $files
fi

echo -e "\nðŸŽ‰ Pre-commit status: success ðŸŽ‰\n"
