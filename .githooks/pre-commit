#!/bin/sh

set -e

root_dir=$(git rev-parse --show-toplevel)

. "$root_dir/scripts/venv.sh"
set_venv_python "$root_dir"

echo "ðŸš€ Running pre-commit hook ðŸš€"

files=$(git diff --cached --name-only --diff-filter=d "*.py")

if [ -n "$files" ]; then
  echo -e "\nâœ¨ Sorting imports..."
  "$VENV_PY" -m ruff check --select I --fix $files
  git add $files

  echo -e "\nâœ¨ Linting and formatting..."
  "$VENV_PY" -m ruff check $files
  "$VENV_PY" -m ruff format $files
fi

echo -e "\nðŸŽ‰ Pre-commit status: success ðŸŽ‰\n"
